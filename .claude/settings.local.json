{
  "permissions": {
    "allow": [
      "Bash(docker exec:*)",
      "Bash(docker logs:*)",
      "WebSearch",
      "Bash(npx tsc --noEmit)",
      "Bash(jest line-tracking.test.ts)",
      "Bash(jest --passWithNoTests line-tracking.test.ts)",
      "Skill(skill-developer)",
      "Skill(skill-optimizer)",
      "Bash(npx create-next-app:*)",
      "Skill(frontend-development)",
      "Bash(chmod:*)",
      "Bash(pkill:*)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "shadcn"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/tsc-check.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/trigger-build-resolver.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ]
  }
}
